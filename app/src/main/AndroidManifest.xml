<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.intelehealth.client">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- <uses-permission android:name="android.permission.SEND_SMS" /> -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" /> <!-- added support to lenova tab 2 -->
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:name=".app.IntelehealthApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".views.activites.AdditionalDocumentsActivity"
            android:label="@string/title_activity_additional_documents"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activites.PatientSurveyActivity"
            android:label="@string/title_activity_patient_survey"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activites.PhysicalExamActivity"
            android:label="@string/title_activity_physical_exam"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activites.FamilyHistoryActivity"
            android:label="@string/title_activity_family_history"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activites.PastMedicalHistoryActivity"
            android:label="@string/title_activity_past_medical_history"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activites.QuestionNodeActivity"
            android:label="@string/title_activity_question_node"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activites.ComplaintNodeActivity"
            android:label="@string/title_activity_complaint_node"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activites.VisitSummaryActivity"
            android:label="@string/title_activity_visit_summary"
            android:parentActivityName=".views.activites.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.activites.HomeActivity" />
        </activity>
        <activity
            android:name=".views.activites.VitalsActivity"
            android:label="@string/title_activity_vitals"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activites.PatientDetailActivity"
            android:label="@string/title_activity_patient_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activites.CameraActivity"
            android:label="@string/title_activity_camera"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activites.ActivitySync"
            android:label="@string/title_activity_sync"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activites.VideoLibraryActivity"
            android:label="@string/title_activity_video_library"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activites.ActivePatientActivity"
            android:label="@string/title_activity_active_patient"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activites.TodayPatientActivity"
            android:label="@string/title_activity_today_patient"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activites.SearchPatientActivity"
            android:label="@string/title_activity_search_patient"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.intelehealth.client.views.activites.HomeActivity" />
        </activity>
        <activity
            android:name=".views.activites.IdentificationActivity"
            android:label="@string/title_activity_identification"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activites.SettingsActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".views.activites.HomeActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.intelehealth.client.views.activites.HomeActivity" />
        </activity>
        <activity
            android:name=".views.activites.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activites.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".views.activites.HomeActivity" />
        </activity>
        <activity
            android:name=".views.activites.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activites.SetupActivity"
            android:label="@string/title_activity_setup"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".security.OpenMRSAccountAuthenticatorService"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <provider
            android:name=".views.providers.SearchSuggestionProvider"
            android:authorities="io.intelehealth.client.activities.search_patient_activity.SearchSuggestionProvider"
            android:exported="false" />

        <activity android:name=".views.activites.MainActivity" />
    </application>

</manifest>