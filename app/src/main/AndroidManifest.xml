<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="io.intelehealth.android">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>

    <uses-feature
            android:name="android.hardware.camera"
            android:required="true"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
            android:name="io.intelehealth.android.IntelehealthApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="io.intelehealth.android.HomeActivity"
                android:label="@string/title_activity_login"/>
        <activity
                android:name="io.intelehealth.android.LoginActivity"
                android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="io.intelehealth.android.ActivePatientActivity"
                android:label="@string/title_activity_active_patient"
                android:parentActivityName="io.intelehealth.android.HomeActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="io.intelehealth.android.HomeActivity"/>
        </activity>
        <activity
                android:name="io.intelehealth.android.PatientDetailActivity"
                android:label="@string/title_activity_patient_detail"
                android:parentActivityName="io.intelehealth.android.ActivePatientActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="io.intelehealth.android.ActivePatientActivity"/>
        </activity>
        <activity
                android:name="io.intelehealth.android.VisitSummaryActivity"
                android:label="@string/title_activity_patient_summary"
                android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="io.intelehealth.android.ViewHistoryActivity"/>
        <activity
                android:name="io.intelehealth.android.SearchPatientActivity"
                android:label="@string/title_activity_search_patient"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data
                    android:name="android.app.searchable"
                    android:resource="@xml/searchable"/>
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="io.intelehealth.android.HomeActivity"/>
        </activity>
        <activity
                android:name="io.intelehealth.android.DiagnosticTestsSelectionActivity"
                android:label="@string/title_activity_diagnostic_tests_list"
                android:theme="@style/AppTheme.NoActionBar"/>

        <service
                android:name="io.intelehealth.android.services.IdService"
                android:exported="false"/>

        <service
                android:name="io.intelehealth.android.services.OpenMRSAccountAuthenticatorService"
                android:exported="false">
        <intent-filter>
            <action android:name="android.accounts.AccountAuthenticator" />
        </intent-filter>
        <meta-data android:name="android.accounts.AccountAuthenticator"
                   android:resource="@xml/authenticator" />
        </service>


    <activity
                android:name="io.intelehealth.android.TableExamActivity"
                android:exported="true"
                android:label="@string/title_activity_table_exam"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="io.intelehealth.android.FamilyHistoryActivity"/>
        </activity>

        <provider
                android:name="io.intelehealth.android.SearchSuggestionProvider"
                android:authorities="io.intelehealth.android.SearchSuggestionProvider"/>

        <activity
                android:name="io.intelehealth.android.IdentificationActivity"
                android:label="@string/title_activity_identification"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="io.intelehealth.android.HomeActivity"/>
        </activity>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
                android:name="com.google.android.gms.version"
                android:value="@integer/google_play_services_version"/>

        <activity
                android:name="io.intelehealth.android.ComplaintNodeActivity"
                android:label="@string/title_activity_complaint_node"
                android:parentActivityName="io.intelehealth.android.IdentificationActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="io.intelehealth.android.IdentificationActivity"/>
        </activity>
        <activity
                android:name="io.intelehealth.android.QuestionNodeActivity"
                android:label="@string/title_activity_question_node"
                android:theme="@style/AppTheme.NoActionBar"/>
        <activity
                android:name="io.intelehealth.android.PatientHistoryActivity"
                android:label="@string/title_activity_patient_history"
                android:parentActivityName="io.intelehealth.android.QuestionNodeActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="io.intelehealth.android.QuestionNodeActivity"/>
        </activity>
        <activity
                android:name="io.intelehealth.android.FamilyHistoryActivity"
                android:label="@string/title_activity_family_history"
                android:parentActivityName="io.intelehealth.android.PatientHistoryActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="io.intelehealth.android.PatientHistoryActivity"/>
        </activity>
        <activity
                android:name="io.intelehealth.android.PhysicalExamActivity"
                android:label="@string/title_activity_physical_exam"
                android:parentActivityName="io.intelehealth.android.PatientHistoryActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="io.intelehealth.android.PatientHistoryActivity"/>
        </activity>
        <activity
                android:name="io.intelehealth.android.SettingsActivity"
                android:label="@string/title_activity_settings"
                android:parentActivityName="io.intelehealth.android.HomeActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="io.intelehealth.android.HomeActivity"/>
        </activity>
    </application>

</manifest>