<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.jhu.bme.cbid.healthassistantsclient">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivePatientActivity"
            android:label="@string/title_activity_active_patient"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.jhu.bme.cbid.healthassistantsclient.MainActivity" />
        </activity>
        <activity
            android:name=".PatientDetailActivity"
            android:label="@string/title_activity_patient_detail"
            android:parentActivityName=".ActivePatientActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.jhu.bme.cbid.healthassistantsclient.ActivePatientActivity" />
        </activity>
        <activity
            android:name=".PatientSummaryActivity"
            android:label="@string/title_activity_patient_summary"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ViewHistoryActivity" />
        <activity
            android:name=".GetPatientHistoryActivity"
            android:label="@string/title_activity_get_patient_history"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchPatientActivity"
            android:label="@string/title_activity_search_patient"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.jhu.bme.cbid.healthassistantsclient.MainActivity" />
        </activity>
        <activity
            android:name=".DiagnosticTestsSelectionActivity"
            android:label="@string/title_activity_diagnostic_tests_list"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".IdService"
            android:exported="false" />

        <activity
            android:name=".TableExamActivity"
            android:label="@string/title_activity_table_exam"
            android:theme="@style/AppTheme.NoActionBar" />

        <provider
            android:name=".SearchSuggestionProvider"
            android:authorities="edu.jhu.bme.cbid.healthassistantsclient.SearchSuggestionProvider" />

        <activity
            android:name=".IdentificationActivity"
            android:label="@string/title_activity_identification"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.jhu.bme.cbid.healthassistantsclient.MainActivity" />
        </activity>
        <activity
            android:name=".ComplaintSelectActivity"
            android:label="@string/title_activity_complaint_select"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ComplaintQuestionsActivity"
            android:label="@string/title_activity_complaint_questions"
            android:parentActivityName=".ComplaintSelectActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.jhu.bme.cbid.healthassistantsclient.ComplaintSelectActivity" />
        </activity>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".ComplaintNodeActivity"
            android:label="@string/title_activity_complaint_node"
            android:parentActivityName=".IdentificationActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.jhu.bme.cbid.healthassistantsclient.IdentificationActivity" />
        </activity>
        <activity
            android:name=".QuestionNodeActivity"
            android:label="@string/title_activity_question_node"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>