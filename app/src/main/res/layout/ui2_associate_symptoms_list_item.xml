<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_7"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll_action_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_10"
                android:background="@drawable/edittext_border_blue"
                android:drawableStart="@drawable/ic_baseline_check_18_green"
                android:drawablePadding="@dimen/padding_7"
                android:gravity="center"
                android:lineSpacingExtra="1sp"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/padding_10"
                android:paddingVertical="@dimen/padding_7"
                android:text="Yes"
                android:textColor="@color/ui2_black_text_color"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border_blue"
                android:drawableStart="@drawable/ic_baseline_close_18_green"
                android:drawablePadding="@dimen/padding_7"
                android:gravity="center"
                android:lineSpacingExtra="1sp"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/padding_10"
                android:paddingVertical="@dimen/padding_7"
                android:text="No"
                android:textColor="@color/ui2_black_text_color"
                android:textSize="12sp"
                android:textStyle="normal" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_toStartOf="@id/ll_action_view"
            android:lineSpacingExtra="1sp"
            android:text="Which part of the abdomen do you feel pain?"
            android:textColor="@color/ui2_black_text_color"
            android:textSize="12sp" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:visibility="gone"></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>