<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    tools:context=".appointmentNew.ScheduleAppointmentActivity_New">

    <include
        android:id="@+id/toolbar_schedule_appointments"
        layout="@layout/toolbar_common_new2_ui2" />

    <LinearLayout
        android:id="@+id/layout_dates"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/toolbar_schedule_appointments"
        android:layout_marginTop="32dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_schedule_appointments"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_prev_month"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ui2_ic_chevron_left" />

        <ImageView
            android:id="@+id/iv_next_month"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ui2_ic_chevron_right"
            android:tint="@color/colorPrimary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_dates"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time_slot_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Pick a time slot"
            android:textColor="@color/textColorGray" />

        <TextView
            android:id="@+id/tv_appointment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ui2_ic_sunrise"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorPrimary1"
            android:gravity="center_vertical"
            android:lineSpacingExtra="3sp"
            android:text="Morning"
            android:textAppearance="@style/fu_detiails_date"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/fu_male_textsize"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_morning_time_slots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:drawableStart="@drawable/ui2_ic_afternoon"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorPrimary1"
            android:gravity="center_vertical"
            android:lineSpacingExtra="3sp"
            android:text="Afternoon"
            android:textAppearance="@style/fu_detiails_date"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/fu_male_textsize"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_afternoon_time_slots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:drawableStart="@drawable/ui2_ic_sunset"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorPrimary1"
            android:gravity="center_vertical"
            android:lineSpacingExtra="3sp"
            android:text="Evening"
            android:textAppearance="@style/fu_detiails_date"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/fu_male_textsize"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_evening_time_slots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />
    </LinearLayout>

</RelativeLayout>