<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.physcialExamActivity.PhysicalExamActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        style="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextColor="@android:color/white"
            app:tabSelectedTextColor="@android:color/white"
            android:visibility="gone"
            android:background="@color/colorPrimary"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/container"
            android:layout_alignBottom="@id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <app.intelehealth.client.utilities.RecyclerViewIndicator
            android:id="@+id/recyclerViewIndicator"
            android:layout_below="@+id/app_bar_view"

            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:avi_animation_enable="true"
            app:avi_drawable="@drawable/blue_radius"
            app:avi_drawable_unselected="@drawable/gray_radius"
            app:avi_height="7dp"
            app:avi_margin="7dp"
            app:avi_width="7dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView">
        </app.intelehealth.client.utilities.RecyclerViewIndicator>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/physExam_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerViewIndicator"
            android:scrollbars="vertical"
            android:visibility="visible"
            android:fadeScrollbars="false"
            android:scrollbarThumbVertical="@color/colorAccent"
            android:layout_above="@+id/fab"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_done_24dp"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
