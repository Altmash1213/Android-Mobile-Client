<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_setup_privacy_back"
            android:layout_width="@dimen/common_imageview_back_width"
            android:layout_height="@dimen/common_imageview_back_height"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/margin_32"
            android:src="@drawable/ic_baseline_arrow_back_24" />


    <ImageView
        android:id="@+id/iv_ayu_icon"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/tv_please_continue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="136dp"
        android:src="@drawable/ui2_ic_ayu_image" />

    <TextView
        android:id="@+id/tv_hello_ayu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_ayu_icon"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/dm_sans_regular"
        android:gravity="center"
        android:lineHeight="36dp"
        android:text="@string/hello_i_am_ayu"
        android:textColor="@color/textColorWhite"
        android:textSize="@dimen/setup_privacy_screen_title"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_hello_ayu"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/dm_sans_regular"
        android:gravity="center"
        android:lineHeight="27dp"
        android:text="@string/ayu_intro"
        android:textColor="@color/textColorWhite"
        android:textSize="@dimen/setup_privacy_screen_info" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ui2_common_top_rounded_white_bg"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_25"
            android:paddingTop="@dimen/padding_30"
            android:paddingEnd="@dimen/padding_25"
            android:paddingBottom="@dimen/padding_20">

            <CheckBox
                android:id="@+id/checkbox_privacy"
                android:layout_width="30dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/tv_privacy_notice_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14.96dp"
                android:layout_toEndOf="@+id/checkbox_privacy"
                android:text="@string/agree_to_terms" />

            <Button
                android:id="@+id/btn_skip_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_privacy_notice_link"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ui2_common_primary_bg"
                android:drawableEnd="@drawable/ui2_ic_baseline_arrow_forward_24"
                android:drawableTint="@color/iconTintWhite"
                android:fontFamily="@font/dm_sans_regular"
                android:lineHeight="24dp"
                android:padding="@dimen/padding_15"
                android:text="@string/setup"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/common_button_text_size" />

        </RelativeLayout>
    </RelativeLayout>


