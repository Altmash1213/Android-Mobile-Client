<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.patientSurveyActivity.PatientSurveyActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/followUpLL"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:layout_margin="5dp"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/padding_card_title_text"
            android:text="@string/want_follow_up_text"
            android:textSize="22sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardElevation="8dp"
            android:id="@+id/followUpSpinnerCV"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="5dp">
            <Spinner
                android:id="@+id/followUpSpinner"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:dropDownWidth="300dp"
                android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                android:paddingRight="14dp"
                android:popupBackground="@android:color/white"
                android:popupElevation="3dp"
                android:stateListAnimator="@drawable/spinner_sla"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/AR_textView"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:includeFontPadding="false"
            android:padding="@dimen/padding_card_title_text"
            android:text="@string/schedule_follow_up"
            android:drawableStart="@drawable/ic_baseline_event_24"
            android:drawablePadding="5dip"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:focusable="false"
            android:visibility="gone"
            tools:visibility="visible"/>

        <RatingBar
            android:id="@+id/AR_ratingBar"
            android:numStars="5"
            android:stepSize="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/AR_survey_submit"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimary"
            android:paddingVertical="15dp"
            android:text="@string/exit_survey_submit"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/lato_bold"
            android:visibility="gone"
            tools:visibility="visible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/feedbackLL"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="5">


            <ImageButton
                android:id="@+id/button_scale_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="TODO"
                android:scaleType="fitCenter"
                android:tag="1"
                android:tint="@color/scale_1"
                app:srcCompat="@drawable/ic_scale_1" />

            <ImageButton
                android:id="@+id/button_scale_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="TODO"
                android:scaleType="fitCenter"
                android:tag="2"
                android:tint="@color/scale_2"
                app:srcCompat="@drawable/ic_scale_2" />

            <ImageButton
                android:id="@+id/button_scale_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="TODO"
                android:scaleType="fitCenter"
                android:tag="3"
                android:tint="@color/scale_3"
                app:srcCompat="@drawable/ic_scale_3" />

            <ImageButton
                android:id="@+id/button_scale_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="TODO"
                android:scaleType="fitCenter"
                android:tag="4"
                android:tint="@color/scale_4"
                app:srcCompat="@drawable/ic_scale_4" />

            <ImageButton
                android:id="@+id/button_scale_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="TODO"
                android:scaleType="fitCenter"
                android:tag="5"
                android:tint="@color/scale_5"
                app:srcCompat="@drawable/ic_scale_5" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:layout_margin="5dp"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/padding_card_title_text"
            android:text="@string/reason_for_resolved"
            android:textSize="22sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardElevation="8dp"
            android:id="@+id/noteSpinnerCV"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="5dp">
            <Spinner
                android:id="@+id/noteSpinner"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:dropDownWidth="300dp"
                android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                android:paddingRight="14dp"
                android:popupBackground="@android:color/white"
                android:popupElevation="3dp"
                android:stateListAnimator="@drawable/spinner_sla"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.cardview.widget.CardView>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/editText_exit_survey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:freezesText="true"
                android:hint="@string/exit_survey_prompt"
                android:imeOptions="actionUnspecified"
                android:inputType="textCapSentences"
                android:singleLine="false"
                android:tag="@string/tag_optional"
                android:focusable="true"
                android:visibility="gone"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/lato_regular"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView3"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/padding_card_title_text"
            android:paddingBottom="@dimen/padding_card_title_text"
            android:text="@string/exit_survey_label"
            android:textSize="22sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:numStars="5"
            android:stepSize="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/additionalCommLL"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:visibility="gone"
            android:background="@drawable/button_layerlist"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="30dp"
            android:padding="@dimen/padding_card_title_text"
            android:orientation="vertical">

            <EditText
                android:id="@+id/additionalCommET"
                android:fontFamily="@font/lato_regular"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ems="10"
                android:gravity="top|start"
                android:hint="@string/additional_comments"
                android:inputType="textMultiLine|textCapSentences|textLongMessage"
                android:isScrollContainer="true"
                android:scrollbars="vertical"
                tools:ignore="MissingPrefix" />

        </LinearLayout>


        <TextView
            android:id="@+id/schedule_textView"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:includeFontPadding="false"
            android:padding="@dimen/padding_card_title_text"
            android:text="@string/schedule_follow_up"
            android:drawableStart="@drawable/ic_baseline_event_24"
            android:drawablePadding="5dip"
            android:textSize="18sp"
            android:focusable="false"/>


        <RelativeLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/button_survey_submit"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary"
                android:paddingVertical="15dp"
                android:text="@string/exit_survey_submit"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/lato_bold" />

            <TextView
                android:visibility="gone"
                android:id="@+id/button_survey_skip"
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_survey_submit"
                android:layout_alignParentRight="true"
                android:layout_marginTop="23dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/lato_bold"
                android:padding="14dp"
                android:text="@string/exit_survey_skip"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                />


        </RelativeLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

