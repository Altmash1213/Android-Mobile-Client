<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageview_close_drawer"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/ui2_ic_close_drawer" />

    <ImageView
        android:id="@+id/imageview_profile_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageview_close_drawer"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ui2_dummy_profile_icon" />

    <TextView
        android:id="@+id/textview_loggedin_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview_close_drawer"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/imageview_profile_icon"
        android:text="Vivek jain"
        android:textSize="@dimen/nav_header_username" />

    <TextView
        android:id="@+id/textview_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_loggedin_username"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imageview_profile_icon"
        android:text="CHW ID : 987654jK "
        android:textSize="@dimen/nav_header_userid" />

    <TextView
        android:id="@+id/textview_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_userid"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imageview_profile_icon"
        android:text="Edit Profile"
        android:textSize="@dimen/nav_header_edit_profile" />


</RelativeLayout>
