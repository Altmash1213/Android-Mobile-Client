<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".ui2.activities.UIDesignActivity">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textlayout_find_patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconDrawable="@drawable/ui2_search_icon_home"
            app:startIconTint="@color/colorPrimary">

            <AutoCompleteTextView
                android:id="@+id/autotv_find_patient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ui2_common_input_bg"
                android:hint="@string/find_patient"
                android:importantForAutofill="no"
                android:maxLines="1"
                android:paddingStart="@dimen/common_edittext_padding_left"
                android:paddingTop="@dimen/common_edittext_padding_top"
                android:paddingEnd="@dimen/common_edittext_padding_right"
                android:paddingBottom="@dimen/common_edittext_padding_bottom"
                android:singleLine="true"
                tools:ignore="SpeakableTextPresentCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/cardTintDarkBlue"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textlayout_find_patient">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">


                <ImageView
                    android:id="@+id/imageview_add_patient"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="7dp"
                    android:foregroundGravity="center"
                    android:padding="9dp"
                    android:paddingLeft="11dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/ui2_add_pateint_home" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/imageview_add_patient"
                    android:fontFamily="@font/dm_sans_regular"
                    android:text="Add patients"
                    android:textColor="@color/textColorWhite"
                    android:textSize="@dimen/common_header_text_size"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageview_add_patient_next"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:foregroundGravity="center"
                    android:padding="6dp"
                    android:src="@drawable/ui2_forward_arrow_white" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/cardTintLightGreen"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">


                <TextView
                    android:id="@+id/textview_prescriptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/dm_sans_regular"
                    android:text="@string/prescriptions"
                    android:textSize="@dimen/common_header_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textview_received_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_prescriptions"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/dm_sans_regular"
                    android:text="5 out of 12 received"
                    android:textColor="@color/textColorGray"
                    android:textSize="@dimen/common_label_text_size" />

                <ImageView
                    android:id="@+id/imageview_prescription_next"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/textview_received_no"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="15dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="6dp"
                    android:paddingBottom="6dp"
                    android:src="@drawable/ui2_forward_arrow_green" />

                <ImageView
                    android:id="@+id/imageview_prescription_next"
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/textview_prescriptions"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ui2_image_prescription_green_bg"
                    android:padding="6dp"
                    android:src="@drawable/ui2_image_prescription_green" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorAccent"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">


                <TextView
                    android:id="@+id/textview_prescriptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/dm_sans_regular"
                    android:text="@string/close_visits"
                    android:textSize="@dimen/common_header_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textview_received_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_prescriptions"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/dm_sans_regular"
                    android:text="12 unclosed visits"
                    android:textColor="@color/textColorGray"
                    android:textSize="@dimen/common_label_text_size" />

                <ImageView
                    android:id="@+id/imageview_prescription_next"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/textview_received_no"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="15dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="6dp"
                    android:paddingBottom="6dp"
                    android:src="@drawable/ui2_forward_arrow_white" />

                <ImageView
                    android:id="@+id/imageview_prescription_next1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/textview_prescriptions"
                    android:layout_marginTop="39dp"
                    android:layout_marginEnd="-43dp"
                    android:layout_toStartOf="@+id/imageview_prescription_next2"
                    android:src="@drawable/ui2_image_prescription_note" />

                <ImageView
                    android:id="@+id/imageview_prescription_next2"
                    android:layout_width="143dp"
                    android:layout_height="112dp"
                    android:layout_below="@+id/textview_prescriptions"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-12dp"
                    android:layout_marginEnd="-10dp"
                    android:padding="6dp"
                    android:src="@drawable/ui2_image_prescription_blue" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView3">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/backgroundWhite"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="10dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/backgroundWhite"
                    android:padding="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ui2_appointments_icon_home"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/dm_sans_regular"
                        android:text="Appointments"
                        android:textSize="@dimen/common_hint_text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/dm_sans_regular"
                        android:text="4 Upcoming"
                        android:textSize="@dimen/common_label_text_size"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView4" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardView4"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/backgroundWhite"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ui2_appointments_icon_home"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/dm_sans_regular"
                        android:text="Follow-up visits"
                        android:textSize="@dimen/common_hint_text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView1" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/dm_sans_regular"
                        android:text="12 Pending"
                        android:textSize="@dimen/common_label_text_size"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView5" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <!--   <include
          android:id="@+id/bottom_nav_add_pay_cr"
          layout="@layout/ui2_layout_common_bottom_nav" />
-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
