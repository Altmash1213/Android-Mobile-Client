<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5"
    app:cardCornerRadius="@dimen/margin_16"
    app:cardElevation="@dimen/margin_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/dialog_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_32"
            android:src="@drawable/dialog_icon_complete" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:lineSpacingExtra="4sp"
                android:text="Patient Registered!"
                android:textAppearance="@style/dialog_title"
                android:textColor="@null"
                android:textSize="@null" />

            <TextView
                android:id="@+id/dialog_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dialog_title"
                android:layout_marginStart="24dp"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:lineSpacingExtra="3sp"
                android:text="Does the patient want to start the \n visit now?"
                android:textAppearance="@style/dialog_subtitle"
                android:textColor="@null"
                android:textSize="@null" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_subtitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="@dimen/margin_32"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/negative_btn"
                    style="@style/negative_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_12"
                    android:background="@drawable/white_bg_button"
                    android:paddingHorizontal="@dimen/margin_20"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/positive_btn"
                    style="@style/positive_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/darkblue_bg_button"
                    android:paddingHorizontal="@dimen/margin_20"
                    android:text="Continue" />
            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>