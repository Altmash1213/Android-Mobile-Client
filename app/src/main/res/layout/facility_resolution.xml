<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewFacility"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/titleBar_cardview"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtViewHeadingFacility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:fontFamily="@font/lato_bold"
                    android:paddingVertical="12dp"
                    android:paddingStart="20dp"
                    android:text="@string/textViewHintFacility"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_content_text_size" />

                <ImageButton
                    android:id="@+id/imagebutton_edit_editFacility"
                    style="@style/SelectableItemBackground"
                    app:srcCompat="@drawable/edit_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="end"
                    android:layout_weight=".2"
                    android:background="@null"
                    android:contentDescription="TODO"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:paddingHorizontal="10dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/autocomplete_state"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:completionThreshold="1"
                        android:hint="@string/identification_screen_prompt_state"
                        android:imeOptions="actionNext|flagNoExtractUi"
                        android:inputType="textAutoComplete"
                        android:maxLength="45"
                        android:maxLines="1"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/autocomplete_district"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:completionThreshold="1"
                        android:hint="@string/identification_screen_prompt_district"
                        android:imeOptions="actionNext|flagNoExtractUi"
                        android:inputType="textAutoComplete"
                        android:maxLength="45"
                        android:maxLines="1"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtViewFacility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:hint="@string/textViewHintFacility"
                        android:singleLine="false"

                        />

                    <org.intelehealth.msfarogyabharat.utilities.multipleSelectionSpinner.MultiSelectionSpinner
                        android:id="@+id/mFacilitySelection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>