<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.visitSummaryActivity.TimelineVisitSummaryActivity">

    <RelativeLayout
        android:id="@+id/relt"
        android:layout_width="match_parent"
        android:layout_height="1000dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_timeline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/timeline_listitem" />
    </RelativeLayout>

    <TextView
        android:id="@+id/rectangle_1"
        android:layout_width="241dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/ic_rectangle_76"
        android:layout_centerHorizontal="true"
        android:text="End First Stage"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:textSize="23sp" />

</RelativeLayout>