                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/card_content_text_size"
                                    android:layout_weight="1"
                                    android:text="@string/visit_bmi_value" />
                            </TableRow>
                            <!--Blood Pressure-->
                            <TableRow>
                                <TextView
                                    android:id ="@+id/textview_bp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/card_content_text_size"
                                    android:layout_weight="1"
                                    android:text="BP"/>

                                <LinearLayout
                                    android:layout_width ="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/textview_bpsys_value"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/card_content_text_size"
                                        android:layout_weight="1"
                                        android:text="@string/visit_bpsys_value" />
                                    <TextView
                                        android:id="@+id/textview_stroke"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/card_content_text_size"
                                        android:layout_weight="1"
                                        android:text="/" />
                                    <TextView
                                        android:id="@+id/textview_bpdia_value"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/card_content_text_size"
                                        android:layout_weight="1"
                                        android:text="@string/visit_bpdia_value" />
                                </LinearLayout>
                            </TableRow>
