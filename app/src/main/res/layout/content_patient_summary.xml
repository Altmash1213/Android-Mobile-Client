                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textview_heading_vitals"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/padding_card_title_text"
                        android:textSize="@dimen/card_title_text_size"
                        android:text="Vitals"/>

                    <!--<ImageButton-->
                        <!--android:id="@+id/imagebutton_edit_vitals"-->
                        <!--android:layout_width="@dimen/edit_icon_width"-->
                        <!--android:layout_height="@dimen/edit_icon_height"-->
