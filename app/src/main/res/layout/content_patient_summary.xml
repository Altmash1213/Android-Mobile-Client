                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textview_heading_vitals">

                            <!--Height-->
                            <TableRow>
                                <TextView
                                    android:id ="@+id/textview_height"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/padding_card"
                                    android:textSize="@dimen/card_content_text_size"
                                    android:layout_weight="1"
                                    android:text="Height (cm)"/>

                                <TextView
                                    android:id="@+id/textview_height_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/padding_card"
                                    android:textSize="@dimen/card_content_text_size"
                                    android:layout_weight="1"
                                    android:text= "@string/visit_height_value" />
                            </TableRow>
                            <!--Weight-->
