<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.searchPatientActivity.SearchPatientActivity_New">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar_relative"
        android:layout_width="0dp"
        android:layout_height="112dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-24dp"
        android:background="@drawable/search_toolbar">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/frame_26086"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="44dp"
            android:layout_marginRight="24dp"
            >

            <ImageButton xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/arrow_right"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_back_white" />

            <!-- Frame 100030 -->
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/frame_10003"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="@dimen/margin_12"
                android:layout_toEndOf="@+id/arrow_right"
                android:background="@drawable/search_edittext_vector">

                <ImageView
                    android:id="@+id/icon_search"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/margin_12"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginBottom="@dimen/margin_12"
                    android:background="@drawable/ic_search_white_icon8" />

                <EditText
                    android:id="@+id/search_txt_enter"
                    android:layout_width="177dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_toEndOf="@+id/icon_search"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/search_txt_enter"
                    android:lineSpacingExtra="3sp"
                    android:textAppearance="@style/search_txt_enter"
                    android:textColorHint="@null" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/search_hint_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_relative"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:lineSpacingExtra="3sp"
        android:text="@string/search_hint_text"
        android:textAppearance="@style/search_hint_text"
        android:textColor="@null" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="278dp"
        android:layout_below="@+id/toolbar_relative"
        android:layout_marginHorizontal="@dimen/padding_40"
        android:layout_marginTop="114dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">


            <ImageView
                android:id="@+id/search_bg_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_search_icon_background" />

        <TextView
            android:id="@+id/search_pat_not_found_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_pat_not_found_txt"
            android:textAppearance="@style/you_can_add"
            android:textSize="20sp"
            android:textColor="@null"
            android:lineSpacingExtra="4sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/search_bg_icon"
            />

            <TextView
                android:id="@+id/search_pat_hint_txt"
                android:layout_width="280dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/margin_12"
                android:text="@string/search_pat_hint_txt"
                android:textColor="@null"
                android:textAppearance="@style/caption"
                android:layout_below="@+id/search_pat_not_found_txt"
                android:lineSpacingExtra="3sp"
                android:layout_centerHorizontal="true"
                android:translationY="-1.58sp"
                android:textSize="16sp"
                android:gravity="center_horizontal|top"
                />

            <ImageButton
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/frame_10007"
                android:layout_width="176dp"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/search_pat_hint_txt"
                android:src="@drawable/ic_add_patient_svg"
                android:background="@drawable/button_bg_rounded_stroke"
                />

        </RelativeLayout>
    </FrameLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_hint_text"
        android:layout_marginStart="24dp"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="24dp"
        android:visibility="gone"
        tools:listitem="@layout/search_listitem_layout"/>

</RelativeLayout>