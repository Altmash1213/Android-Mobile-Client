<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_below="@+id/card_name_openmrsid"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="@dimen/padding_40"
    app:cardCornerRadius="@dimen/margin_8"
    app:cardElevation="@dimen/margin_5">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_12"
    android:layout_marginStart="@dimen/margin_12"
    android:layout_marginEnd="@dimen/margin_12"
    android:layout_marginBottom="@dimen/margin_16" >


    <!--Personal Header-->
    <RelativeLayout
        android:id="@+id/relative_personal_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/personal_info_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/addpatient_icon_unselected" />

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/personal_info_icon"
            android:text="Personal"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_centerVertical="true"
            android:textAppearance="@style/patdetail_header1"
            android:lineSpacingExtra="3sp"
            android:gravity="center_vertical"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chevron_up"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relative_personal_header"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_marginBottom="@dimen/fu_card_margin_updown"
        android:background="@color/notifi_divider_color" />

    <!--Personal Sub-Child-->
    <RelativeLayout
        android:id="@+id/details_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider">

        <TextView
            android:id="@+id/details_personal_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textAppearance="@style/patdetail_header1"
            android:lineSpacingExtra="-3sp"
            android:textColor="@null"
            android:textSize="@null"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_change_patdetail"
            android:layout_alignParentEnd="true"
            android:background="@null" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_relative"
        android:layout_marginTop="@dimen/margin_8">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:layout_marginStart="2dp"
                    android:drawableStart="@drawable/bullet_gray"
                    android:text="  Name"
                    android:textAppearance="@style/caption"
                    android:textSize="14sp"
                    android:textColor="@color/hint_text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kiran Devi Prakash"
                    android:textAppearance="@style/caption"
                    android:textSize="14sp"
                    android:textColor="@color/textview_color"
                    />
            </TableRow>

            <!--Gender-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:layout_marginStart="2dp"
                    android:drawableStart="@drawable/bullet_gray"
                    android:text="  Gender"
                    android:textAppearance="@style/caption"
                    android:textSize="14sp"
                    android:textColor="@color/hint_text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female"
                    android:textAppearance="@style/caption"
                    android:textSize="14sp"
                    android:textColor="@color/textview_color"
                    />
            </TableRow>

            <!--Date of birth-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:layout_marginStart="2dp"
                    android:drawableStart="@drawable/bullet_gray"
                    android:text="  Date of birth"
                    android:textAppearance="@style/caption"
                    android:textSize="14sp"
                    android:textColor="@color/hint_text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12th May 1988"
                    android:textAppearance="@style/caption"
                    android:textSize="14sp"
                    android:textColor="@color/textview_color"
                    />
            </TableRow>

            <!--Age-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:layout_marginStart="2dp"
                    android:drawableStart="@drawable/bullet_gray"
                    android:text="  Age"
                    android:textAppearance="@style/caption"
                    android:textSize="14sp"
                    android:textColor="@color/hint_text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="24 years"
                    android:textAppearance="@style/caption"
                    android:textSize="14sp"
                    android:textColor="@color/textview_color"
                    />
            </TableRow>

            <!--Phone number-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:layout_marginStart="2dp"
                    android:drawableStart="@drawable/bullet_gray"
                    android:text="  Phone number"
                    android:textAppearance="@style/caption"
                    android:textSize="14sp"
                    android:textColor="@color/hint_text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+91 9876543210"
                    android:textAppearance="@style/caption"
                    android:textSize="14sp"
                    android:textColor="@color/textview_color"
                    />
            </TableRow>




        </TableLayout>

    </RelativeLayout>


</RelativeLayout>
</androidx.cardview.widget.CardView>
