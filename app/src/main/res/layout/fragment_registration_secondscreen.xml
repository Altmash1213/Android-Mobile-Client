<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_16dp"
    android:layout_marginBottom="@dimen/margin_16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/margin_24"
        android:layout_above="@+id/frame_nxtbtn_viewgrp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_24"
        android:layout_marginEnd="@dimen/margin_24">


        <!--Postal code and Country-->
        <LinearLayout
            android:id="@+id/postal_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/postalcode_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3sp"
                    android:text="Postal code*"
                    android:textAppearance="@style/blur_txtview"
                    
                    android:textSize="@null" />

                <EditText
                    android:id="@+id/postalcode_edittext"
                    style="@style/edittext_textcolor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height_44dp"
                    android:layout_marginTop="@dimen/common_edittext_margin_top"
                    android:background="@drawable/edittext_border"
                    android:hint="Enter Postal code"
                    android:textColorHint="@color/edittext_hint_color"
                    android:paddingStart="@dimen/fu_margin_start"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingBottom="@dimen/margin_10"
                    
                    android:textSize="@dimen/edittext_textsize_16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/country_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3sp"
                    android:text="Country*"
                    android:textAppearance="@style/blur_txtview"
                    
                    android:textSize="@null" />

                <Spinner
                    android:id="@+id/country_edittext"
                    style="@style/SpinnerTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/edittext_height_44dp"
                    android:layout_marginTop="@dimen/common_edittext_margin_top"
                    android:paddingStart="@dimen/fu_margin_start"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_16dp"
                    android:paddingBottom="@dimen/margin_10"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postal_country"
            android:layout_marginTop="@dimen/margin_24"
            android:orientation="vertical">

            <TextView
                android:id="@+id/state_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:text="State*"
                android:textAppearance="@style/blur_txtview"
                
                android:textSize="@null" />

            <Spinner
                android:id="@+id/state_edittext"
                style="@style/SpinnerTheme"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_44dp"
                android:layout_marginTop="@dimen/common_edittext_margin_top"
                android:paddingStart="@dimen/fu_margin_start"
                android:paddingTop="@dimen/margin_10"
                android:paddingEnd="@dimen/margin_16dp"
                android:paddingBottom="@dimen/margin_10" />
        </LinearLayout>

        <!--District & City-->
        <LinearLayout
            android:id="@+id/linear_distr_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_state"
            android:layout_marginTop="@dimen/margin_24"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/district_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3sp"
                    android:text="District*"
                    android:textAppearance="@style/blur_txtview"
                    android:textSize="@null" />

                <Spinner
                    android:id="@+id/district_edittext"
                    style="@style/SpinnerTheme"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height_44dp"
                    android:layout_marginTop="@dimen/common_edittext_margin_top"
                    android:paddingStart="@dimen/fu_margin_start"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_16dp"
                    android:paddingBottom="@dimen/margin_10"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/city_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3sp"
                    android:text="Village/Town/City*"
                    android:textAppearance="@style/blur_txtview"
                    
                    android:textSize="@null" />

                <Spinner
                    android:id="@+id/city_edittext"
                    style="@style/SpinnerTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/edittext_height_44dp"
                    android:layout_marginTop="@dimen/common_edittext_margin_top"
                    android:paddingStart="@dimen/fu_margin_start"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_16dp"
                    android:paddingBottom="@dimen/margin_10"
                    />
            </LinearLayout>
        </LinearLayout>

        <!--Address 1-->
        <LinearLayout
            android:id="@+id/linear_address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_distr_city"
            android:layout_marginTop="@dimen/margin_24"
            android:orientation="vertical">

            <TextView
                android:id="@+id/address1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:text="Corresponding Address 1*"
                android:textAppearance="@style/blur_txtview"
                
                android:textSize="@null" />

            <EditText
                android:id="@+id/address1_edittext"
                style="@style/edittext_textcolor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_44dp"
                android:layout_marginTop="@dimen/common_edittext_margin_top"
                android:background="@drawable/edittext_border"
                android:hint="Enter patient address"
                android:textColorHint="@color/edittext_hint_color"
                android:paddingStart="@dimen/fu_margin_start"
                android:paddingTop="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_10"
                
                android:textSize="@dimen/edittext_textsize_16sp" />
        </LinearLayout>

        <!--Address 2-->
        <LinearLayout
            android:id="@+id/linear_address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_address1"
            android:layout_marginTop="@dimen/margin_24"
            android:orientation="vertical">

            <TextView
                android:id="@+id/address2_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:text="Corresponding Address 2"
                android:textAppearance="@style/blur_txtview"
                
                android:textSize="@null" />

            <EditText
                android:id="@+id/address2_edittext"
                style="@style/edittext_textcolor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_44dp"
                android:layout_marginTop="@dimen/common_edittext_margin_top"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@drawable/edittext_border"
                android:hint="Enter patient address"
                android:textColorHint="@color/edittext_hint_color"
                android:paddingStart="@dimen/fu_margin_start"
                android:paddingTop="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_10"
                
                android:textSize="@dimen/edittext_textsize_16sp" />
        </LinearLayout>


    </RelativeLayout>
    </ScrollView>


    <FrameLayout
        android:id="@+id/frame_nxtbtn_viewgrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_24">

        <LinearLayout
            android:id="@+id/linear_secondscreen_nxt_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="visible">

            <Button
                android:id="@+id/frag2_btn_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fu_btn_size"
                android:layout_marginStart="@dimen/margin_24"
                android:layout_marginEnd="@dimen/fu_card_margin_updown"
                android:layout_weight="1"
                android:background="@drawable/back_btn_patregistra" />

            <Button
                android:id="@+id/frag2_btn_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fu_btn_size"
                android:layout_marginEnd="@dimen/margin_24"
                android:layout_toEndOf="@+id/btn_back_firstscreen"
                android:layout_weight="1"
                android:background="@drawable/nxt_btn_secondscreen" />
        </LinearLayout>
    </FrameLayout>



</RelativeLayout>