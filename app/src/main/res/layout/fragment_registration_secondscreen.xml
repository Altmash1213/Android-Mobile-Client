<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_16"
    android:layout_marginBottom="@dimen/margin_16"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">


        <!--Postal code and Country-->
        <LinearLayout
            android:id="@+id/postal_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/postalcode_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3sp"
                    android:text="Postal code*"
                    android:textAppearance="@style/blur_txtview"
                    android:textColor="@null"
                    android:textSize="@null" />

                <EditText
                    android:id="@+id/postalcode_edittext"
                    style="@style/edittext_textcolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:background="@drawable/edittext_border"
                    android:hint="Enter Postal code"
                    android:paddingStart="@dimen/margin_12"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingBottom="@dimen/margin_10"
                    android:textColor="@null"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/country_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3sp"
                    android:text="Country*"
                    android:textAppearance="@style/blur_txtview"
                    android:textColor="@null"
                    android:textSize="@null" />

                <EditText
                    android:id="@+id/country_edittext"
                    style="@style/edittext_textcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:background="@drawable/edittext_border"
                    android:drawableStart="@drawable/india_flag_svg"
                    android:drawableEnd="@drawable/ui2_ic_chevron_down"
                    android:drawablePadding="@dimen/margin_8"
                    android:hint="India"
                    android:paddingStart="@dimen/margin_12"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_16"
                    android:paddingBottom="@dimen/margin_10"
                    android:textColor="@null"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postal_country"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/state_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:text="State*"
                android:textAppearance="@style/blur_txtview"
                android:textColor="@null"
                android:textSize="@null" />

            <EditText
                android:id="@+id/state_edittext"
                style="@style/edittext_textcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@drawable/edittext_border"
                android:drawableEnd="@drawable/ui2_ic_chevron_down"
                android:paddingStart="@dimen/margin_12"
                android:paddingTop="@dimen/margin_10"
                android:paddingEnd="@dimen/margin_16"
                android:paddingBottom="@dimen/margin_10"
                android:text="Maharashtra"
                android:textSize="16sp" />
        </LinearLayout>

        <!--District & City-->
        <LinearLayout
            android:id="@+id/linear_distr_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_state"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/district_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3sp"
                    android:text="District*"
                    android:textAppearance="@style/blur_txtview"
                    android:textColor="@null"
                    android:textSize="@null" />

                <EditText
                    android:id="@+id/district_edittext"
                    style="@style/edittext_textcolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:background="@drawable/edittext_border"
                    android:drawableEnd="@drawable/ui2_ic_chevron_down"
                    android:paddingStart="@dimen/margin_12"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_16"
                    android:paddingBottom="@dimen/margin_10"
                    android:text="Nashik"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/city_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3sp"
                    android:text="Village/Town/City*"
                    android:textAppearance="@style/blur_txtview"
                    android:textColor="@null"
                    android:textSize="@null" />

                <EditText
                    android:id="@+id/city_edittext"
                    style="@style/edittext_textcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:background="@drawable/edittext_border"
                    android:drawableEnd="@drawable/ui2_ic_chevron_down"
                    android:drawablePadding="@dimen/margin_8"
                    android:paddingStart="@dimen/margin_12"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_16"
                    android:paddingBottom="@dimen/margin_10"
                    android:text="Sinnar"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!--Address 1-->
        <LinearLayout
            android:id="@+id/linear_address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_distr_city"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/address1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:text="Corresponding Address 1*"
                android:textAppearance="@style/blur_txtview"
                android:textColor="@null"
                android:textSize="@null" />

            <EditText
                android:id="@+id/address1_edittext"
                style="@style/edittext_textcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@drawable/edittext_border"
                android:hint="Enter patient address"
                android:paddingStart="@dimen/margin_12"
                android:textColor="@null"
                android:textSize="16sp" />
        </LinearLayout>

        <!--Address 2-->
        <LinearLayout
            android:id="@+id/linear_address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_address1"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/address2_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:text="Corresponding Address 2"
                android:textAppearance="@style/blur_txtview"
                android:textColor="@null"
                android:textSize="@null" />

            <EditText
                android:id="@+id/address2_edittext"
                style="@style/edittext_textcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@drawable/edittext_border"
                android:hint="Enter patient address"
                android:paddingStart="@dimen/margin_12"
                android:textColor="@null"
                android:textSize="16sp" />
        </LinearLayout>


    </RelativeLayout>
</ScrollView>