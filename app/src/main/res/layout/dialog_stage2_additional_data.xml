<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">

    <EditText
        android:id="@+id/birth_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Enter Birth Weight"
        android:hint="@string/enter_birth_weight"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:inputType="numberDecimal"
        android:nextFocusDown="@id/apgar_1min"
        android:paddingVertical="20dp"/>

    <EditText
        android:id="@+id/apgar_1min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_apgar_at_1_min"
        android:nextFocusDown="@id/apgar_5min"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:inputType="text"
        android:paddingVertical="20dp"/>

    <EditText
        android:id="@+id/apgar_5min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_apgar_at_5_min"
        android:nextFocusDown="@id/sex"
        android:maxLines="1"
        android:inputType="text"
        android:gravity="center_horizontal"
        android:paddingVertical="20dp"/>

    <EditText
        android:id="@+id/sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_sex_of_baby"
        android:nextFocusDown="@id/baby_status"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:inputType="text"
        android:paddingVertical="20dp"/>

    <EditText
        android:id="@+id/baby_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_baby_status"
        android:nextFocusDown="@id/mother_status"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:inputType="text"
        android:paddingVertical="20dp"/>

    <EditText
        android:id="@+id/mother_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_mother_status"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:inputType="text"
        android:paddingVertical="20dp"/>

</LinearLayout>