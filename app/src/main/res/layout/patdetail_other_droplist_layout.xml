<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_below="@+id/address_card"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="@dimen/margin_20"
    app:cardCornerRadius="@dimen/margin_8"
    app:cardElevation="@dimen/margin_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginEnd="@dimen/margin_12"
        android:layout_marginBottom="@dimen/margin_16" >


        <!--Personal Header-->
        <RelativeLayout
            android:id="@+id/relative_personal_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/personal_info_icon"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/other_icon_unselected" />

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/personal_info_icon"
                android:text="Other details"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_centerVertical="true"
                android:textAppearance="@style/patdetail_header1"
                android:lineSpacingExtra="3sp"
                android:gravity="center_vertical"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chevron_up"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/relative_personal_header"
            android:layout_marginTop="@dimen/margin_12"
            android:layout_marginBottom="@dimen/fu_card_margin_updown"
            android:background="@color/notifi_divider_color" />

        <!--Personal Sub-Child-->
        <RelativeLayout
            android:id="@+id/details_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider">

            <TextView
                android:id="@+id/details_personal_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textAppearance="@style/patdetail_header1"
                android:lineSpacingExtra="-3sp"
                android:textColor="@null"
                android:textSize="@null"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edit_change_patdetail"
                android:layout_alignParentEnd="true"
                android:background="@null" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_relative"
            android:layout_marginTop="@dimen/margin_8">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_marginStart="2dp"
                        android:drawableStart="@drawable/bullet_gray"
                        android:text="  Son/Daughter/ \n  Wife of"
                        android:textAppearance="@style/caption"
                        android:textSize="14sp"
                        android:textColor="@color/hint_text_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Not mentioned"
                        android:textAppearance="@style/caption"
                        android:textSize="14sp"
                        android:textColor="@color/textview_color"
                        />
                </TableRow>

                <!--Gender-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_weight="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_marginStart="2dp"
                        android:drawableStart="@drawable/bullet_gray"
                        android:text="  Occupation"
                        android:textAppearance="@style/caption"
                        android:textSize="14sp"
                        android:textColor="@color/hint_text_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Diabetes - 20 May 2021 | Current medication - Not taking any | Last measured blood sugar and HbA1C - Not known"
                        android:textAppearance="@style/caption"
                        android:textSize="14sp"
                        android:textColor="@color/textview_color"
                        />
                </TableRow>

                <!--Date of birth-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_weight="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_marginStart="2dp"
                        android:drawableStart="@drawable/bullet_gray"
                        android:text="  Caste"
                        android:textAppearance="@style/caption"
                        android:textSize="14sp"
                        android:textColor="@color/hint_text_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Not mentioned"
                        android:textAppearance="@style/caption"
                        android:textSize="14sp"
                        android:textColor="@color/textview_color"
                        />
                </TableRow>

                <!--Age-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_weight="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_marginStart="2dp"
                        android:drawableStart="@drawable/bullet_gray"
                        android:text="  Education"
                        android:textAppearance="@style/caption"
                        android:textSize="14sp"
                        android:textColor="@color/hint_text_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Graduation"
                        android:textAppearance="@style/caption"
                        android:textSize="14sp"
                        android:textColor="@color/textview_color"
                        />
                </TableRow>

                <!--Phone number-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_weight="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_marginStart="2dp"
                        android:drawableStart="@drawable/bullet_gray"
                        android:text="  Economic status"
                        android:textAppearance="@style/caption"
                        android:textSize="14sp"
                        android:textColor="@color/hint_text_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="APL"
                        android:textAppearance="@style/caption"
                        android:textSize="14sp"
                        android:textColor="@color/textview_color"
                        />
                </TableRow>
                
            </TableLayout>

        </RelativeLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>
