<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="24dp"
    android:layout_marginBottom="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="@dimen/apps_details_profile_card_corner_radius"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/ui2_ic_bg_options_appointment"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/card_camera_option"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/card_apps_options_padding">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:src="@drawable/ui2_ic_camera_option" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_apps_title_margin_top"
                android:layout_marginBottom="@dimen/tv_card_info_margin_bottom"
                android:gravity="center"
                android:lineHeight="@dimen/card_apps_title_line_height"
                android:lineSpacingExtra="@dimen/card_apps_title_line_spacing"
                android:text="Camera"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/card_apps_title_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/solidViewLightGray" />

        <LinearLayout
            android:id="@+id/card_gallery_option"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/card_apps_options_padding">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:src="@drawable/ui2_ic_gallary_option" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_apps_title_margin_top"
                android:layout_marginBottom="@dimen/tv_card_info_margin_bottom"
                android:gravity="center"
                android:lineHeight="@dimen/card_apps_title_line_height"
                android:lineSpacingExtra="@dimen/card_apps_title_line_spacing"
                android:text="Gallery"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/card_apps_title_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/solidViewLightGray" />

        <LinearLayout
            android:id="@+id/card_document_option"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/card_apps_options_padding">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:src="@drawable/ui2_ic_document_option" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_apps_title_margin_top"
                android:layout_marginBottom="@dimen/tv_card_info_margin_bottom"
                android:gravity="center"
                android:lineHeight="@dimen/card_apps_title_line_height"
                android:lineSpacingExtra="@dimen/card_apps_title_line_spacing"
                android:text="Document"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/card_apps_title_text_size"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>