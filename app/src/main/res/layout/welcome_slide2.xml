<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="120dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ayu_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_ayu_logo_svg"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/hello_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello\n\n I’m Ayu, a digital health assistant. Let’s get started!"
        android:layout_below="@id/ayu_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/lato_regular"
        android:textSize="17sp"
        android:layout_marginStart="46dp"
        android:lineSpacingExtra="2sp"
        android:gravity="center_horizontal|top"
        />

        <Button
            android:id="@+id/button_demo_visit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:elevation="5dp"
            android:fontFamily="@font/lato_bold"
            android:text="Demo version"
            android:layout_below="@id/hello_text"
            android:layout_marginTop="70dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:includeFontPadding="true"
            android:background="@drawable/ic_rectangle_76"/>

        <Button
            android:id="@+id/button_custom_visit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:elevation="5dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lato_bold"
            android:text="Custom setup"
            android:textColor="#000000"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:includeFontPadding="true"
            android:layout_below="@id/button_demo_visit"
            android:background="@drawable/ic_rectangle_custom_setup"
            />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>