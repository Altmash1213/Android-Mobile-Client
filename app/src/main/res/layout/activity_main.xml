<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.jhu.bme.cbid.healthassistantsclient.MainActivity">


    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".5">

        <Button
            android:id="@+id/newPatientButton"
            android:layout_width="@dimen/home_screen_button_width"
            android:layout_height="@dimen/home_screen_button_height"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:text="@string/button_new_pt" />

        <Button
            android:id="@+id/findPatientsButton"
            android:layout_width="@dimen/home_screen_button_width"
            android:layout_height="@dimen/home_screen_button_height"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:onClick=""
            android:text="@string/button_find_pt" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".5">

        <Button
            android:id="@+id/diagnosticServicesButton"
            android:layout_width="@dimen/home_screen_button_width"
            android:layout_height="@dimen/home_screen_button_height"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:text="@string/button_diagnostic_tests" />

        <Button
            android:id="@+id/activePatientsButton"
            android:layout_width="@dimen/home_screen_button_width"
            android:layout_height="@dimen/home_screen_button_height"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:text="@string/button_active_pt" />
    </TableRow>

</TableLayout>
