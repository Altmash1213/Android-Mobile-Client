<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:paddingStart="15sp"
        android:paddingEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/household_electricity_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="15sp"
                android:fontFamily="@font/poppins"
                android:text="@string/does_the_house_have_electricity"
                android:textColor="@color/text_color"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/household_electricity_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/household_electricity_text_view"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/electricity_yes_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:text="@string/yes"
                    android:textSize="14sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/electricity_no_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:text="@string/no"
                    android:textSize="14sp" />

            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/load_shedding_hours_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/household_electricity_radio_group"
                android:hint="@string/number_of_hours_of_load_shedding_per_day"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/load_shedding_hours_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/poppins"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/load_shedding_days_per_week_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/load_shedding_hours_layout"
                android:hint="@string/number_of_days_with_load_shedding_per_week"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/load_shedding_days_per_week_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/poppins"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/running_water_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/load_shedding_days_per_week_layout"
                android:layout_marginStart="5sp"
                android:layout_marginTop="15sp"
                android:fontFamily="@font/poppins"
                android:text="@string/is_there_running_water_available_in_the_house"
                android:textColor="@color/text_color"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/running_water_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/running_water_text_view"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/running_water_yes_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:text="@string/yes"
                    android:textSize="14sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/running_water_no_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:text="@string/no"
                    android:textSize="14sp" />

            </RadioGroup>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/primary_source_of_water_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/running_water_radio_group"
                android:layout_marginStart="5sp"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/poppins"
                android:text="@string/what_is_the_primary_source_of_water_for_the_household"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:visibility="gone" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/primary_source_of_water_checkbox_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/primary_source_of_water_text_view"
                android:layout_marginTop="20sp"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/village_tank_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:gravity="center_vertical"
                    android:paddingStart="4sp"
                    android:paddingEnd="4sp"
                    android:text="@string/village_tank"
                    android:textSize="13sp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/open_well_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:paddingStart="4sp"
                    android:paddingEnd="4sp"
                    android:text="@string/open_well"
                    android:textSize="13sp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/hand_pump_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:paddingStart="4sp"
                    android:paddingEnd="4sp"
                    android:text="@string/hand_pump_checkbox"
                    android:textSize="13sp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/bore_well_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:paddingStart="4sp"
                    android:paddingEnd="4sp"
                    android:text="@string/bore_well"
                    android:textSize="13sp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/river_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:paddingStart="4sp"
                    android:paddingEnd="4sp"
                    android:text="@string/river"
                    android:textSize="13sp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/pond_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:paddingStart="4sp"
                    android:paddingEnd="4sp"
                    android:text="@string/pond"
                    android:textSize="13sp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/other_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:paddingStart="4sp"
                    android:paddingEnd="4sp"
                    android:text="@string/other"
                    android:textSize="13sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/other_sources_of_water_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/primary_source_of_water_checkbox_linear_layout"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/other_sources_of_water_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/lato_regular"
                    android:hint="@string/other_water_sources"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/water_source_distance_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/other_sources_of_water_layout"
                android:layout_marginStart="5sp"
                android:layout_marginTop="15sp"
                android:fontFamily="@font/poppins"
                android:text="@string/how_far_is_the_water_source_from_the_house"
                android:textColor="@color/text_color"
                android:visibility="gone"
                tools:visibility="visible"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/water_source_distance_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/water_source_distance_text_view"
                android:layout_marginTop="13dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:orientation="horizontal">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/water_source_distance_meter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/meter"
                    android:textSize="14sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/water_source_distance_kilometer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/km"
                    android:textSize="14sp" />

            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/water_source_distance_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/water_source_distance_radio_group"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/water_source_distance_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:hint="@string/enter_the_no"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/water_supply_availability_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/water_source_distance_text_input"
                android:layout_marginStart="5sp"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/poppins"
                android:text="@string/available_of_water_supply_hours_per_day"
                android:textColor="@color/text_color"
                android:visibility="gone"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/water_supply_availability_edit_text"
                android:layout_width="68dp"
                android:layout_height="31dp"
                android:layout_below="@id/water_supply_availability_text_view"
                android:layout_marginTop="13dp"
                android:background="@drawable/drawable_custom_edit_text_background"
                android:fontFamily="@font/poppins"
                android:inputType="number"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:visibility="gone"
                android:textSize="14sp" />

<!--            <com.google.android.material.textview.MaterialTextView-->
<!--                android:id="@+id/water_supply_availability_text_view_2"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@id/water_supply_availability_edit_text"-->
<!--                android:layout_marginStart="5sp"-->
<!--                android:layout_marginTop="20sp"-->
<!--                android:fontFamily="@font/poppins"-->
<!--                android:text="@string/available_of_water_supply_hours_per_day"-->
<!--                android:textColor="@color/text_color"-->
<!--                android:textSize="14sp" />-->

<!--            <androidx.appcompat.widget.AppCompatEditText-->
<!--                android:id="@+id/water_supply_availability_edit_text_2"-->
<!--                android:layout_width="68dp"-->
<!--                android:layout_height="31dp"-->
<!--                android:layout_below="@id/water_supply_availability_text_view_2"-->
<!--                android:layout_marginTop="13dp"-->
<!--                android:background="@drawable/drawable_custom_edit_text_background"-->
<!--                android:fontFamily="@font/poppins"-->
<!--                android:inputType="number"-->
<!--                android:textAlignment="center"-->
<!--                android:textColor="@color/text_color"-->
<!--                android:textSize="14sp" />-->

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/bank_account_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/water_supply_availability_edit_text"
                android:layout_marginStart="5sp"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/poppins"
                android:text="@string/does_the_house_have_a_bank_account"
                android:textColor="@color/text_color"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/bank_account_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank_account_text_view"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/bank_account_yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:text="@string/yes"
                    android:textSize="14sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/bank_account_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:text="@string/no"
                    android:textSize="14sp" />

            </RadioGroup>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank_account_radio_group"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/next_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/next"
                    android:textSize="14sp"
                    app:fontFamily="@font/poppins_medium" />

                <ImageButton
                    android:id="@+id/next_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rounded_image_button_background"
                    app:srcCompat="@drawable/ic_arrow_right" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>