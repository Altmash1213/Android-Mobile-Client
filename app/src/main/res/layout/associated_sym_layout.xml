<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LL_associated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/symp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="8dip"
        android:drawablePadding="16dip"
        android:padding="8dip"
        android:text="fever"
        android:textColor="@color/gray_5"
        android:textSize="15sp"
        app:drawableStartCompat="@drawable/ic_baseline_lens_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/symp"
        android:layout_margin="5dp"
        android:gravity="end"
        android:padding="5dp"
        android:weightSum="2">


        <TextView
            android:id="@+id/chip_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".4"
            android:background="@drawable/rounded_rectangle_orange"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/generic_yes"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chip_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5sp"
            android:layout_weight=".4"
            android:background="@drawable/rounded_rectangle_orange"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/generic_no"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>