<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/et_pin_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/otp_pinview_margin_end"
        android:background="@drawable/otp_pinview_bg_pin_ui2"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1" />

    <EditText
        android:id="@+id/et_pin_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/otp_pinview_margin_end"
        android:background="@drawable/otp_pinview_bg_pin_ui2"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1" />

    <EditText
        android:id="@+id/et_pin_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/otp_pinview_margin_end"
        android:background="@drawable/otp_pinview_bg_pin_ui2"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1" />

    <EditText
        android:id="@+id/et_pin_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/otp_pinview_margin_end"
        android:background="@drawable/otp_pinview_bg_pin_ui2"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1" />

    <EditText
        android:id="@+id/et_pin_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/otp_pinview_margin_end"
        android:background="@drawable/otp_pinview_bg_pin_ui2"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1" />

    <EditText
        android:id="@+id/et_pin_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/otp_pinview_margin_end"
        android:background="@drawable/otp_pinview_bg_pin_ui2"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="1" />
</LinearLayout>