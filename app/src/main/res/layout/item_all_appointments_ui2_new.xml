<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_all_appointments"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/item_ta_margin_horizontal"
    android:layout_marginTop="@dimen/item_ta_margin_top"
    android:layout_marginBottom="@dimen/item_ta_margin_bottom"
    app:cardCornerRadius="@dimen/item_ta_card_corner_radius"
    app:cardElevation="@dimen/item_ta_card_elevation">

    <RelativeLayout
        android:padding="@dimen/item_ta_card_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_member_image"
            android:layout_width="@dimen/item_ta_member_image_width"
            android:layout_height="@dimen/item_ta_member_image_height"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/item_ta_member_iv_margin_top"
            android:elevation="0dp"
            app:cardCornerRadius="@dimen/item_ta_member_iv_card_radius">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/item_ta_member_image_width"
                android:layout_height="@dimen/item_ta_member_image_height"
                android:src="@drawable/avatar1" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cp_margin_start"
            android:layout_toEndOf="@+id/card_member_image"
            android:lineSpacingExtra="3sp"
            android:text="Sarrah Paul"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/item_ta_tv_name_text_size" />


        <TextView
            android:id="@+id/tv_prescription_states1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_patient_name"
            android:layout_marginStart="@dimen/presc_rec_margin_start"
            android:layout_marginTop="@dimen/presc_rec_margin_top"
            android:layout_toEndOf="@+id/card_member_image"
            android:drawableStart="@drawable/ui2_ic_icons8_treatment_1"
            android:drawablePadding="@dimen/presc_rec_drawable_padding"
            android:gravity="center_vertical"
            android:lineHeight="@dimen/presc_rec_line_ht"
            android:lineSpacingExtra="@dimen/presc_rec_line_spacing"
            android:text="Received 3 hours ago new"
            android:textAppearance="@style/caption"
            android:textColor="@color/iconTintGray"
            android:textSize="@dimen/presc_rec_text_size" />

        <ImageView
            android:id="@+id/iv_priority_tag1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_ta_priority_tag_height"
            android:layout_alignParentEnd="true"
            android:layout_gravity="top|end|center"
            android:layout_marginTop="@dimen/item_ta_priority_tag_margin_top"
            android:layout_marginEnd="@dimen/item_ta_priority_tag_margin_end"
            android:layout_weight="0.5"
            android:gravity="center"
            android:lineSpacingExtra="0sp"
            android:src="@drawable/ui2_frame_priority" />

        <TextView
            android:id="@+id/tv_prescription_states"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_prescription_states1"
            android:layout_marginStart="@dimen/fu_margin_start"
            android:layout_marginTop="@dimen/presc_states_margin_top"
            android:layout_toEndOf="@+id/card_member_image"
            android:background="@drawable/ui2_bg_appointment_status"
            android:drawableStart="@drawable/ui2_ic_icons8_treatment_1"
            android:drawablePadding="@dimen/presc_states_drawable_padding"
            android:gravity="center_vertical"
            android:lineHeight="@dimen/presc_rec_line_ht"
            android:lineSpacingExtra="@dimen/presc_rec_line_spacing"
            android:padding="@dimen/presc_states_padding"
            android:text="Received 3 hours ago"
            android:textAppearance="@style/caption"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/presc_states_text_size" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>