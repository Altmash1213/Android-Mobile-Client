<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_16dp"
    android:layout_marginBottom="@dimen/margin_16dp"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_24"
        android:layout_marginEnd="@dimen/margin_24">


        <LinearLayout
            android:id="@+id/linear_relation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/relation_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:text="Son/Daughter/Wife of"
                android:textAppearance="@style/blur_txtview"
                android:textColor="@null"
                android:textSize="@null" />

            <EditText
                android:id="@+id/relation_edittext"
                style="@style/edittext_textcolor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_44dp"
                android:layout_marginTop="@dimen/common_edittext_margin_top"
                android:background="@drawable/edittext_border"
                android:hint="Enter patient address"
                android:paddingStart="@dimen/fu_margin_start"
                android:paddingTop="@dimen/margin_10"
                android:paddingEnd="@dimen/margin_16dp"
                android:paddingBottom="@dimen/margin_10"
                android:text="Rakesh Kaka"
                android:textSize="@dimen/edittext_textsize_16sp" />
        </LinearLayout>

        <!--Occupation-->
        <LinearLayout
            android:id="@+id/linear_occupation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_relation"
            android:layout_marginTop="@dimen/margin_24"
            android:orientation="vertical">

            <TextView
                android:id="@+id/occupation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:text="Occupation"
                android:textAppearance="@style/blur_txtview"
                android:textColor="@null"
                android:textSize="@null" />

            <EditText
                android:id="@+id/occupation_edittext"
                style="@style/edittext_textcolor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_44dp"
                android:layout_marginTop="@dimen/common_edittext_margin_top"
                android:background="@drawable/edittext_border"
                android:drawableEnd="@drawable/ui2_ic_chevron_down"
                android:hint="Type occupation or select"
                android:paddingStart="@dimen/fu_margin_start"
                android:paddingTop="@dimen/margin_10"
                android:paddingEnd="@dimen/margin_16dp"
                android:paddingBottom="@dimen/margin_10"
                android:textSize="@dimen/edittext_textsize_16sp" />
        </LinearLayout>

        <!--Caste-->
        <LinearLayout
            android:id="@+id/linear_caste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_occupation"
            android:layout_marginTop="@dimen/margin_24"
            android:orientation="vertical">

            <TextView
                android:id="@+id/caste_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:text="Caste"
                android:textAppearance="@style/blur_txtview"
                android:textColor="@null"
                android:textSize="@null" />

            <EditText
                android:id="@+id/caste_edittext"
                style="@style/edittext_textcolor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_44dp"
                android:layout_marginTop="@dimen/common_edittext_margin_top"
                android:background="@drawable/edittext_border"
                android:drawableEnd="@drawable/ui2_ic_chevron_down"
                android:hint="Type caste or select"
                android:paddingStart="@dimen/fu_margin_start"
                android:paddingTop="@dimen/margin_10"
                android:paddingEnd="@dimen/margin_16dp"
                android:paddingBottom="@dimen/margin_10"
                android:textSize="@dimen/edittext_textsize_16sp" />
        </LinearLayout>

        <!--Education-->
        <LinearLayout
            android:id="@+id/linear_education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_caste"
            android:layout_marginTop="@dimen/margin_24"
            android:orientation="vertical">

            <TextView
                android:id="@+id/education_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:text="Education"
                android:textAppearance="@style/blur_txtview"
                android:textColor="@null"
                android:textSize="@null" />

            <EditText
                android:id="@+id/education_edittext"
                style="@style/edittext_textcolor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_44dp"
                android:layout_marginTop="@dimen/common_edittext_margin_top"
                android:background="@drawable/edittext_border"
                android:drawableEnd="@drawable/ui2_ic_chevron_down"
                android:hint="Type education or select"
                android:paddingStart="@dimen/fu_margin_start"
                android:paddingTop="@dimen/margin_10"
                android:paddingEnd="@dimen/margin_16dp"
                android:paddingBottom="@dimen/margin_10"
                android:textSize="@dimen/edittext_textsize_16sp" />
        </LinearLayout>

        <!--Economic Status-->
        <LinearLayout
            android:id="@+id/linear_economicstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_education"
            android:layout_marginTop="@dimen/margin_24"
            android:orientation="vertical">

            <TextView
                android:id="@+id/economicstatus_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:text="Economic status"
                android:textAppearance="@style/blur_txtview"
                android:textColor="@null"
                android:textSize="@null" />

            <EditText
                android:id="@+id/economicstatus_edittext"
                style="@style/edittext_textcolor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_44dp"
                android:layout_marginTop="@dimen/common_edittext_margin_top"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@drawable/edittext_border"
                android:drawableEnd="@drawable/ui2_ic_chevron_down"
                android:hint="Type economic or select"
                android:paddingStart="@dimen/fu_margin_start"
                android:paddingTop="@dimen/margin_10"
                android:paddingEnd="@dimen/margin_16dp"
                android:paddingBottom="@dimen/margin_10"
                android:textSize="@dimen/edittext_textsize_16sp" />
        </LinearLayout>


    </RelativeLayout>
</ScrollView>