<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/colorAccent"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="bottom"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hw_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="8dp"
            app:srcCompat="@drawable/ic_person_camera_intele" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight=".5">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/hw_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/hw_name"
                    android:textSize="@dimen/card_content_sub_text_size" />

                <TextView
                    android:id="@+id/hw_name_value"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/white"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="fill"
                    android:textSize="@dimen/card_content_sub_text_size" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/hw_zender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/gender"
                    android:textSize="@dimen/card_content_sub_text_size" />

                <TextView
                    android:id="@+id/hw_gender_value"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/white"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="fill"
                    android:textSize="@dimen/card_content_sub_text_size" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/hw_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/hw_location"
                    android:textSize="@dimen/card_content_sub_text_size" />

                <TextView
                    android:id="@+id/hw_location_value"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/white"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="fill"
                    android:textSize="@dimen/card_content_sub_text_size" />

            </TableRow>

        </TableLayout>
    </LinearLayout>
</LinearLayout>