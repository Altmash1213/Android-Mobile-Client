<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activities.patientDetailActivity.PatientDetailActivity2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/fu_toolbat_txt_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/toolbar_margin_left"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginEnd="@dimen/toolbar_margin_right"
        android:orientation="horizontal"
        android:weightSum="1">

        <!-- Frame 100116 -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/frame_10011"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <!-- arrow-right -->
            <ImageButton
                android:id="@+id/backbtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/margin_5"
                android:background="@null"
                android:visibility="gone"
                tools:visibility="visible"
                android:src="@drawable/ic_arrow_right" />

            <!-- Label -->
            <TextView
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_10"
                android:gravity="top"
                android:lineSpacingExtra="1sp"
                android:text="Patient details"
                android:textColor="@null"
                android:textSize="@dimen/toolbar_text_size"
                android:textAppearance="@style/label"
                android:translationY="-0.28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:layout_marginStart="@dimen/fu_margin_start"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/refresh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:layout_marginEnd="@dimen/margin_20"
                android:src="@drawable/ic_refreshbtn" />

            <ImageButton
                android:id="@+id/cancelbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/cancel_btn_cross" />

        </LinearLayout>
    </LinearLayout>

    <!--Header Content-->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_name_openmrsid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="@dimen/margin_8"
        app:cardElevation="@dimen/margin_5"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_12" >

            <androidx.cardview.widget.CardView
                android:id="@+id/profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:elevation="0dp"
                android:layout_margin="2dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:src="@drawable/avatar1" />
            </androidx.cardview.widget.CardView>

            <!--Name and SubTitle-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/margin_12"
                android:layout_toEndOf="@+id/profile">

                <TextView
                    android:id="@+id/name_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kiran Devi Prakash"
                    android:textAppearance="@style/patdetail_header1"
                    android:lineSpacingExtra="-3sp"
                    android:textColor="@null"
                    android:textSize="@null"
                    />

                <TextView
                    android:id="@+id/openmrsID_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4"
                    android:gravity="center_vertical"
                    android:text="@string/fu_openmrsID"
                    android:textAppearance="@style/caption_fu_openmrsId"
                    android:textColor="@null"
                    android:textSize="@dimen/fu_male_textsize" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

        <!--Header 2-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_name_openmrsid"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="@dimen/padding_40"
        app:cardCornerRadius="@dimen/margin_8"
        app:cardElevation="@dimen/margin_5"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_12" >


        <!--Personal Header-->
        <RelativeLayout
            android:id="@+id/relative_personal_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/personal_info_icon"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/addpatient_icon_unselected" />

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/personal_info_icon"
                android:text="Personal"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_centerVertical="true"
                android:textAppearance="@style/patdetail_header1"
                android:lineSpacingExtra="3sp"
                android:gravity="center_vertical"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ui2_ic_chevron_down"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/relative_personal_header"
            android:layout_marginTop="@dimen/margin_12"
            android:layout_marginBottom="@dimen/fu_card_margin_updown"
            android:background="@color/notifi_divider_color" />

        <!--Personal Sub-Child-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider">

            <TextView
                android:id="@+id/details_personal_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textAppearance="@style/patdetail_header1"
                android:lineSpacingExtra="-3sp"
                android:textColor="@null"
                android:textSize="@null"
                />


        </RelativeLayout>


    </RelativeLayout>
    </androidx.cardview.widget.CardView>



    </RelativeLayout>
</ScrollView>