            <LinearLayout
                android:id="@+id/pregnancy_questions_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="@string/txt_what_was_the_outcome_of_your_pregnancy"
                    android:textSize="@dimen/card_content_sub_text_size" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <Spinner
                    android:id="@+id/spinner_outcomepregnancy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/outcomepregnancy_en" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:id="@+id/llChildAlive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/txt_is_the_child_alive"
                        android:textSize="@dimen/card_content_sub_text_size" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <Spinner
                        android:id="@+id/spinner_childalive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/childalive_en" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="?android:attr/listDivider" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edittext_yearofpregnancy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_what_was_the_year_of_pregnancy_outcome"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edittext_monthspregnancylast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_how_many_months_did_this_pregnancy_last"
                    android:textSize="15sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <EditText
                    android:id="@+id/edittext_monthsbeingpregnant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_how_many_months_have_you_been_pregnant"
                    android:textSize="15sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <LinearLayout
                    android:id="@+id/llDeliveryPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/txt_what_is_the_place_of_delivery"
                        android:textSize="@dimen/card_content_sub_text_size" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <Spinner
                        android:id="@+id/spinner_placeofdeliverypregnant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/placedelivery_en" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="?android:attr/listDivider" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFocalPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/focal_facility_for_this_pregnancy"
                        android:textSize="@dimen/card_content_sub_text_size" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <Spinner
                        android:id="@+id/spinner_focal_block"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!--                                    <Space-->
                    <!--                                        android:layout_width="10dp"-->
                    <!--                                        android:layout_height="10dp" />-->

                    <!--                                    <Spinner-->
                    <!--                                        android:id="@+id/spinner_focal_village"-->
                    <!--                                        android:layout_width="match_parent"-->
                    <!--                                        android:layout_height="wrap_content"-->
                    <!--                                        android:layout_marginStart="5dp"-->
                    <!--                                        android:layout_marginBottom="10dp"-->
                    <!--                                        android:visibility="gone" />-->

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_pregnancyblock_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/lato_regular"
                        android:hint="@string/enter_block_name_other"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:textSize="@dimen/card_content_sub_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="?android:attr/listDivider" />

                </LinearLayout>

                <!--                                <EditText-->
                <!--                                    android:id="@+id/edittext_focalfacility"-->
                <!--                                    android:layout_width="match_parent"-->
                <!--                                    android:layout_height="wrap_content"-->
                <!--                                    android:hint="@string/txt_focal_facility_for_this_pregnancy" />-->

                <!-- <EditText
                    android:id="@+id/edittext_singlemultiplebirths"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Was this a single/multiple births?"/>-->
                <LinearLayout
                    android:id="@+id/llSingleMultipleBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/txt_was_this_a_single_multiple_births"
                        android:textSize="@dimen/card_content_sub_text_size" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <Spinner
                        android:id="@+id/spinner_singlemultiplebirths"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/singlemultiplebirths_en" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="?android:attr/listDivider" />
                    <!--                        single/multiple-->
                </LinearLayout>

                <EditText
                    android:id="@+id/edittext_babyagedied"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_how_old_was_the_baby_when_he_she_died"
                    android:textSize="15sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <LinearLayout
                    android:id="@+id/llBabyGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/txt_what_is_was_the_sex_of_the_baby"
                        android:textSize="@dimen/card_content_sub_text_size" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <Spinner
                        android:id="@+id/spinner_sexofbaby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/sexofbaby_en" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="?android:attr/listDivider" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="@string/was_this_pregnancy_planned"
                    android:textSize="@dimen/card_content_sub_text_size" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <Spinner
                    android:id="@+id/spinner_pregnancyplanned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/pregnancyplanned_en" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="@string/txt_were_you_identified_as_a_high_risk_pregnancy_case"
                    android:textSize="@dimen/card_content_sub_text_size" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <Spinner
                    android:id="@+id/spinner_pregnancyhighriskcase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/highriskpregnancy_en" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:id="@+id/llChildComplications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/txt_were_any_complications_identified_at_the_time_of_delivery"

                        android:textSize="@dimen/card_content_sub_text_size" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <Spinner
                        android:id="@+id/spinner_pregnancycomplications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/complications_en" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="?android:attr/listDivider" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>