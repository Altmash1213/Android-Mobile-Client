<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <!-- Frame 2608676 -->
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/frame_26086"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/fu_card_margin_sides"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/fu_card_margin_sides"
            android:layout_alignParentTop="true">

            <!-- You can add all acco -->
            <TextView
                android:id="@+id/you_can_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:lineSpacingExtra="3sp"
                android:text="Today's visits"
                android:textStyle="bold"
                android:textAppearance="@style/you_can_add"
                android:textSize="@dimen/fu_male_textsize" />

            <!-- Frame 100314 -->
            <TextView
                android:id="@+id/today_nodata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/you_can_add"
                android:gravity="center"
                android:padding="@dimen/card_padding"
                android:text="No follow up data"
                android:visibility="gone"
                android:textAppearance="@style/caption"
                android:textColor="@null"
                android:textSize="@dimen/fu_male_textsize" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/you_can_add"
                android:layout_marginTop="@dimen/text_margin"
                android:padding="@dimen/card_padding"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="1"
                tools:listitem="@layout/followup_list_item" />

            <!--            This week-->
            <TextView
                android:id="@+id/this_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recycler_today"
                android:gravity="top"
                android:lineSpacingExtra="3sp"
                android:text="This week's visits"
                android:textStyle="bold"
                android:textAppearance="@style/you_can_add"
                android:textSize="@dimen/fu_male_textsize" />

            <TextView
                android:id="@+id/week_nodata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/this_week"
                android:gravity="center"
                android:padding="@dimen/card_padding"
                android:visibility="gone"
                android:text="No follow up data"
                android:textAppearance="@style/caption"
                android:textColor="@null"
                android:textSize="@dimen/fu_male_textsize" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_thisweek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/this_week"
                android:layout_marginTop="@dimen/text_margin"
                android:padding="@dimen/margin_5"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="2"
                tools:listitem="@layout/followup_list_item" />

            <!-- This month -->
            <TextView
                android:id="@+id/this_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv_thisweek"
                android:layout_marginTop="@dimen/text_margin"
                android:gravity="top"
                android:lineSpacingExtra="3sp"
                android:text="This month's visit"
                android:textStyle="bold"
                android:textAppearance="@style/you_can_add"
                android:textSize="@dimen/fu_male_textsize" />

            <TextView
                android:id="@+id/month_nodata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/this_month"
                android:gravity="center"
                android:padding="@dimen/card_padding"
                android:visibility="gone"
                android:text="No follow up data"
                android:textAppearance="@style/caption"
                android:textColor="@null"
                android:textSize="@dimen/fu_male_textsize" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_thismonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/this_month"
                android:layout_marginTop="@dimen/text_margin"
                android:padding="@dimen/margin_5"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="4"
                tools:listitem="@layout/followup_list_item" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>