<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.visitSummaryActivity.VisitSummaryActivity_New">

   <!-- Toolbar - start-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/frame_10021"
        android:layout_width="0dp"
        android:layout_height="@dimen/followup_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-24dp"
        android:background="@drawable/frame_10021">

        <!-- Frame 100167 -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/frame_10016"
            android:layout_width="0dp"
            android:layout_height="@dimen/fu_toolbat_txt_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/toolbar_margin_left"
            android:layout_marginTop="@dimen/toolbar_margin_top"
            android:layout_marginRight="@dimen/toolbar_margin_right"
            android:orientation="horizontal"
            android:weightSum="1">

            <!-- Frame 100116 -->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/frame_10011"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="horizontal">

                <!-- arrow-right -->
                <ImageButton
                    android:id="@+id/vector"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:padding="@dimen/margin_5"
                    android:background="@null"
                    android:src="@drawable/ic_arrow_right" />

                <!-- Label -->
                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_10"
                    android:gravity="top"
                    android:lineSpacingExtra="1sp"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:text="@string/_visit_summary"
                    android:textSize="@dimen/toolbar_text_size"
                    android:textAppearance="@style/label"
                    android:translationY="-0.28sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:layout_marginStart="@dimen/margin_20"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/refresh"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:tint="@color/red"
                    android:src="@drawable/ic_refreshbtn" />

                <ImageButton
                    android:id="@+id/filter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/three_dots_menu" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <!--Toolbar - end-->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fu_header_card_height"
        android:layout_below="@+id/frame_10021"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/fu_card_margin_sides"
        android:layout_marginTop="@dimen/fu_card_margin_updown"
        android:layout_marginRight="@dimen/fu_card_margin_sides"
        android:elevation="16dp"
        app:cardCornerRadius="@dimen/margin_5"
        app:cardElevation="@dimen/margin_5">

        <!-- Frame 100340 -->
        <LinearLayout
            android:id="@+id/frame_10034"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/fu_margin_start"
            android:orientation="horizontal"
            android:weightSum="1">

            <!--1st-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:elevation="0dp"
                    android:layout_marginStart="2dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/avatar1" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/fu_margin_start"
                    android:layout_toEndOf="@+id/profile"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/frame_10033"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/patname_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal|center_vertical"
                            android:lineSpacingExtra="-3sp"
                            android:maxLines="1"
                            android:fontFamily="@font/lato_bold"
                            android:textStyle="bold"
                            android:text="@string/fu_visit_name"
                            android:textAppearance="@style/label_16sp"
                            android:textColor="@null"
                            android:textSize="@dimen/fu_name_txt_size" />

                        <TextView
                            android:id="@+id/gender_age_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/fu_male_margin_start"
                            android:layout_toEndOf="@+id/patname_txt"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="-2sp"
                            android:text="@string/misc_txt"
                            android:textAppearance="@style/label_misc_txt_14sp"
                            android:textColor="@null"
                            android:textSize="@dimen/fu_male_textsize" />

                    </LinearLayout>

                    <!-- Caption -->
                    <TextView
                        android:id="@+id/openmrsID_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/margin_4"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/fu_openmrsID"
                        android:textAppearance="@style/caption_fu_openmrsId"
                        android:textColor="@null"
                        android:textSize="@dimen/fu_male_textsize" />

                </LinearLayout>
            </RelativeLayout>

            <!--2nd-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/frame_26088"
                    android:layout_width="@dimen/fu_icon_width"
                    android:layout_height="@dimen/fu_icon_height"
                    android:background="@null"
                    android:src="@drawable/ui2_ic_chevron_down" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>