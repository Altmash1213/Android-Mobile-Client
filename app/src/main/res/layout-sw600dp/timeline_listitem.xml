<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp">

    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="06:00 AM" />

            <View
                android:id="@+id/vl_1"
                android:layout_width="2dp"
                android:layout_height="120dp"
                android:layout_above="@+id/vl_2"
                android:layout_marginStart="21dp"
                android:layout_toEndOf="@id/time1"
                android:background="#33000000" />

            <ImageView
                android:id="@+id/circle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/time1"
                android:src="@drawable/circle_indicator_timeline" />

            <View
                android:id="@+id/hl_1"
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/circle1"
                android:background="#33000000" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@+id/hl_1"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Summary: This looks a summary \n\n Alert: This is an Alert!!!" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </FrameLayout>

    <!--    Child A-->
    <FrameLayout
        android:id="@+id/frame2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame1"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="06:15 AM" />

            <View
                android:id="@+id/vl_2"
                android:layout_width="2dp"
                android:layout_height="130dp"
                android:layout_above="@+id/vl_3"
                android:layout_below="@+id/vl_1"
                android:layout_marginStart="21dp"
                android:layout_toEndOf="@id/time2"
                android:background="#33000000" />

            <ImageView
                android:id="@+id/circle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/time2"
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/circle_indicator_timeline" />


            <View
                android:id="@+id/hl_2"
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/circle2"
                android:background="#33000000" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_parent1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:layout_toEndOf="@+id/hl_2"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="A- Summary: This looks a summary \n\n Alert: This is an Alert!!!" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </FrameLayout>

    <!--    Child B-->
    <FrameLayout
        android:id="@+id/frame3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame2"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="06:30 AM" />

            <View
                android:id="@+id/vl_3"
                android:layout_width="2dp"
                android:layout_height="130dp"
                android:layout_above="@+id/vl_4"
                android:layout_below="@+id/vl_2"
                android:layout_marginStart="21dp"
                android:layout_toEndOf="@id/time3"
                android:background="#33000000" />

            <ImageView
                android:id="@+id/circle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/time3"
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/circle_indicator_timeline" />

            <View
                android:id="@+id/hl_3"
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/circle3"
                android:background="#33000000" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_parent2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:layout_toEndOf="@+id/hl_3"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="B- Summary: This looks a summary \n\n Alert: This is an Alert!!!" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </FrameLayout>

    <!--    Child C-->
    <FrameLayout
        android:id="@+id/frame4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame3"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/time4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="06:45 AM" />

            <View
                android:id="@+id/vl_4"
                android:layout_width="2dp"
                android:layout_height="130dp"
                android:layout_below="@+id/vl_3"
                android:layout_alignBottom="@id/frame4"
                android:layout_marginStart="21dp"
                android:layout_toEndOf="@id/time4"
                android:background="#33000000" />

            <ImageView
                android:id="@+id/circle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/time4"
                android:src="@drawable/circle_indicator_timeline" />

            <View
                android:id="@+id/hl_4"
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/circle4"
                android:background="#33000000" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_parent3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:layout_toEndOf="@+id/hl_4"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="C- Summary: This looks a summary \n\n Alert: This is an Alert!!!" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>